# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_application_id_here
CLIENT_SECRET=your_discord_client_secret_here
CALLBACK_URL=http://localhost:3000/dashboard/auth/callback

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Dashboard Configuration
ENABLE_DASHBOARD=true
PORT=3000
DASHBOARD_URL=http://localhost:3000
SESSION_SECRET=change_this_to_a_very_long_random_secret_key_for_sessions

# Admin Key (for testing premium features without payment)
ADMIN_KEY=test-premium-key-2025

# Stripe Payment Configuration (Optional - for premium features)
# Get these from https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create products and prices in Stripe dashboard)
STRIPE_BASIC_PRICE_ID=price_basic_tier_id
STRIPE_PRO_PRICE_ID=price_pro_tier_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_tier_id

# Node Environment
NODE_ENV=development

