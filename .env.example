# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_application_id_here
CLIENT_SECRET=your_discord_client_secret_here
CALLBACK_URL=https://your-railway-url.railway.app/dashboard/auth/callback

# Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Dashboard Configuration (Optional)
ENABLE_DASHBOARD=false
DASHBOARD_PORT=3001
DASHBOARD_URL=https://your-railway-url.railway.app
SESSION_SECRET=change_this_to_random_secret_key

# Node Environment
NODE_ENV=production
